<div class="container">
  <br>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
    <h2 class="text-danger">There were some errors:</h2>
    <ul>
      <% @trip.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    </div>
    <% end %>
  <br>
  <h1 class="text-success">Plan a New Trip: </h1>
    <div class="text-danger">
      <%= form_for @trip do |f| %>
      <%= f.hidden_field :user_id, value: @trip.user_id %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :start_date%>
      <%= f.date_field(:start_date) %>
      <br>
      <%= f.label :end_date%>
      <%= f.date_field(:end_date) %>
      <br>
      <%= f.label :travel_companions %>
      <%= f.text_field :travel_companions %>
      <br>
      <%= f.label :notes %>
      <%= f.text_area :notes %>
      <br>
      <%= f.label "Country" %>
      <%= f.collection_select(:country_ids, Country.all, :id, :name) %>
      <br>
      <%=  f.submit class: "btn btn-info" %>
      <% end %>
    </div>
