<!-- Jumbotron style for the heading -->
<div class="container pt-4">
  <div class="jumbotron text-center">
    <div class="container">
      <div class="row">
        <div class="col">
          <h1 class="display-4">Welcome To <%= @country.name%></h1>
          <p class="lead"><%= @country.information%></p>
        </div>
        <div class="col-4">
          <img src="<%= @country.country_image%>" class="img-fluid rounded mx-auto d-block" alt="<%= @country.name%> City">
          <button type="button" class="btn btn-outline-dark"><%= link_to 'Or Create New Activity', new_activity_path, :class => "text-dark" %></button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <br>
  <div class="row">
    <% @country.activities.each do |activity| %>
    <br>
    <div class="col-sm-3 pb-4">
      <div class="card text-center">
        <img src="https://images.unsplash.com/photo-1514053224997-6bd0de1c73ca?ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" class="card-img-top" alt="European City">
        <div class="card-body">
          <h2 class="card-title"><%= activity.name %></h2>
          <p class="card-text"><%= activity.notes%></p>
          <!-- Link to the countries show page -->
          <button type="button" class="btn btn-warning" class="card-link"><%= link_to 'Read More', activity %></button>
        </div>
      </div>
    </div>
  <% end %>
</div>
